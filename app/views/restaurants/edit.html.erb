<h1>Edit this restaurant!</h1>

<%= form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |x| %>
<p>
	<%= x.label :name %><br>
	<%= x.text_field :name %>
</p>

<p>
	<%= x.label :description %><br>
	<%= x.text_area :description %>
</p>

<p>
	<%= x.label :address %><br>
	<%= x.text_field :address %>
</p>

<p>
	<%= x.label :phone %><br>
	<%= x.text_field :phone %>
</p>

<p>
	<%= x.submit %>
</p>
<% end %>

<%= link_to 'Back', restaurants_path %>
